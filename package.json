{
  "name": "node-with-typescript",
  "version": "1.0.0",
  "description": "NodeJS, Express app with Sequelize and Typescript",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "serve": "node dist/server.js",
    "build": "tsc",
    "clean-dist": "rm -rf dist/",
    "clean-full": "rm -rf dist/ && rm -rf node_modules/",
    "env": "export NODE_ENV=production",
    "env-dev": "export NODE_ENV=development",
    "start": "yarn clean-dist && tsc && yarn serve"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "express",
    "sequelize"
  ],
  "author": "Farid Mansimli",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "morgan": "^1.10.0",
    "sequelize": "^6.21.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
